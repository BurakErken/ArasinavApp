<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ArasinavApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ArasinavApp"
    Shell.FlyoutBehavior="Flyout"
    Title="ArasinavApp">

    <ShellContent
        Title="Ana Sayfa"
        Icon="home.png"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
       Title="Kredi Hesaplama"
        Icon="creditcarddebt.png"
       ContentTemplate="{DataTemplate local:CreditCalculation}"
       Route="CreditCalculation" />
    <ShellContent
       Title="Renk Seçici"
       Icon="colorpicker.png"
       ContentTemplate="{DataTemplate local:ColorPicker}"
       Route="ColorPicker" />
    <ShellContent
       Title="Vücut Kitle İndeksi"
       Icon="bodymass.png"
       ContentTemplate="{DataTemplate local:BodyMassIndex}"
       Route="BodyMassIndex" />
    <ShellContent
       Title="ToDo List"
       Icon="todo.png"
       ContentTemplate="{DataTemplate local:ToDoList}"
       Route="ToDoList" />

</Shell>
